{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node", "vite/client"],
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["vite.config.ts"]
}
